{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "buffer_font_family": "PT Mono",
  "ui_font_family": "PT Mono",
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "One Dark",
    "dark": "One Dark Pro"
  },
  "scrollbar": {
    "show": "system"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "file_icons": true
  },
  "toolbar": {
    "selections_menu": false,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_onboarding_banner": false,
    "show_user_picture": false
  },
  "project_panel": {
    "default_width": 300,
    "scrollbar": {
      "show": "never"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "terminal": {
    "button": false,
    "font_size": 13,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "search": {
    "button": false
  },
  "relative_line_numbers": true,
  "telemetry": {
    "metrics": false
  },
  "diagnostics": {
    "button": false,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "warning"
    },
    "cargo": null
  }
}
